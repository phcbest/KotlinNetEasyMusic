<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <org.phcbest.neteasymusic.ui.widget.playDisc.DiscRotateImageView
        android:id="@+id/iv_play_disc"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:src="@drawable/play_disc"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <ImageView
        android:id="@+id/iv_play_needle"
        android:layout_width="100dp"
        android:layout_height="150dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="-90dp"
        android:scaleType="centerInside"
        android:src="@drawable/play_needle"
        app:layout_constraintEnd_toEndOf="@+id/iv_play_disc"
        app:layout_constraintStart_toStartOf="@+id/iv_play_disc"
        app:layout_constraintTop_toTopOf="@+id/iv_play_disc" />


</androidx.constraintlayout.widget.ConstraintLayout>